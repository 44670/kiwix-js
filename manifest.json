{
    "manifest_version": 2,
    "name": "Kiwix",
    "version": "2.0",

    "description": "Kiwix : offline wikipedia reader",

    "icons": {
        "48": "www/img/icons/kiwix-48.png",
        "90": "www/img/icons/kiwix-90.png"
    },

    "browser_action": {
        "default_icon": {
            "48": "www/img/icons/kiwix-48.png",
            "90": "www/img/icons/kiwix-90.png"
        },
        "default_title": "Kiwix"
    },

    "background": {
        "scripts": ["webextension/backgroundscript.js"]
    }
}
